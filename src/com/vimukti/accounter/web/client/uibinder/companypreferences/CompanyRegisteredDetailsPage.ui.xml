<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel spacing="8">
		<g:VerticalPanel spacing="8">
			<g:HorizontalPanel spacing="8">
				<g:Label ui:field="registeredCompanyNameLabel"/>
				<g:TextBox ui:field="registeredCompanyName"/>
			</g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label ui:field="address1Label"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="address1TextBox"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label ui:field="address2Label"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="address2TextBox"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label ui:field="cityLabel"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="cityTextBox"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label ui:field="postalCodeLabel"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="postalCodeTextBox"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label ui:field="countryLabel"/>
						</g:customCell>
						<g:customCell>
							<g:ListBox ui:field="countryCombo"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label ui:field="stateLabel"/>
						</g:customCell>
						<g:customCell>
							<g:ListBox ui:field="stateCombo"/>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 