<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
		<g:VerticalPanel spacing="8">
			<g:VerticalPanel styleName="companyInfoPanel">
				<g:Label styleName="header" ui:field="doYouLabelItem"/>
				<g:VerticalPanel>
					<g:CheckBox ui:field="useCustomerNo"/>
					<g:CheckBox ui:field="useVendorNo"/>
					<g:CheckBox ui:field="useAccountNo"/>
				</g:VerticalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="companyInfoPanel">
				<g:Label ui:field="howDoYouLabelItem" styleName="header"/>
				<g:VerticalPanel>
					<g:Grid>
						<g:row>
							<g:customCell>
								<g:Label ui:field="customerComboLabel"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox visibleItemCount="1" ui:field="customerCombo"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="supplierComboLabel"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox visibleItemCount="1" ui:field="supplierCombo"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="accountComboLabel"/>
							</g:customCell>
							<g:customCell>
								<g:ListBox visibleItemCount="1" ui:field="accountCombo"/>
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
</ui:UiBinder> 