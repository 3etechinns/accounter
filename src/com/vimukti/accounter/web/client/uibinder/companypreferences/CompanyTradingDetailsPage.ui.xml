<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:VerticalPanel spacing="8">
			<g:HorizontalPanel spacing="8">
				<g:Label ui:field="tradingCompanyNameLabel"/>
				<g:TextBox ui:field="tradingCompanyName"/>
			</g:HorizontalPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label horizontalAlignment="ALIGN_LEFT" ui:field="tradingAddressLabel"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label ui:field="address1TextLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="address1Text"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="address2TextLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="address2Text"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="cityTextLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="cityText"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="postalcodeTextLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="postalcodeText"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="countryComboLabel"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="countryCombo"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="stateComboLabel"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="stateCombo"/>
					</g:customCell>
				</g:row>
			</g:Grid>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 