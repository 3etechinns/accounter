<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel ui:field="mainViewPanel" spacing="8">
		<g:VerticalPanel ui:field="employeePanel" styleName="companyInfoPanel">
			<g:Label ui:field="headerLabel" styleName="header" />
			<g:VerticalPanel ui:field="viewPanel">
				<g:RadioButton name="trackEmployee" ui:field="trackEmployeeYes"
					styleName="employee_yesno" />
				<g:VerticalPanel ui:field="checkBoxPanel">
					<g:CheckBox ui:field="w2Employees" />
					<g:CheckBox ui:field="contractors" />
				</g:VerticalPanel>
				<g:RadioButton name="trackEmployee" ui:field="trackEmployeeNo"
					styleName="employee_yesno" />
			</g:VerticalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="trackPanel" styleName="companyInfoPanel">
			<g:HTML wordWrap="true" ui:field="trackExpenses" styleName="header" />
			<g:RadioButton name="trackEmployeeType" ui:field="trackEmployeeExpenseYes"
				styleName="employee_yesno" />
			<g:RadioButton name="trackEmployeeType" ui:field="trackEmployeeExpenseNo"
				styleName="employee_yesno" />
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 