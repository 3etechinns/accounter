<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel ui:field="mainViewPanel">
		<g:Label ui:field="headerLabel" styleName="setup_header_label" />
		<g:Grid styleName="select_grid">
			<g:row>
				<g:customCell>
					<g:Label ui:field="primaryCurrenyLabel"/>
				</g:customCell>
				<g:customCell>
					<g:ListBox visibleItemCount="1" ui:field="primaryCurrencyListBox" styleName="currency_listbox"/>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:CheckBox ui:field="isMultiCurrencyAllowed"/>
		<!-- <g:VerticalPanel ui:field="currencyListGridPanel"/> -->
	</g:VerticalPanel>
</ui:UiBinder> 