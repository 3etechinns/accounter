<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel spacing="8" styleName="companyInfoPanel" >
		<g:VerticalPanel spacing="6" styleName="fullSizePanel">
			<g:HorizontalPanel spacing="4"  >
				<g:CheckBox ui:field="classTrackingCheckBox" />
				<g:Label ui:field="classTrackingCheckBoxLabel" />
			</g:HorizontalPanel>
			<g:VerticalPanel spacing="6" ui:field="hiddenPanel"  >
				<g:HorizontalPanel spacing="6">
					<g:CheckBox ui:field="classWarningCheckBox" />
					<g:Label ui:field="classWarningCheckBoxLabel"
						horizontalAlignment="ALIGN_LEFT" />
				</g:HorizontalPanel>
				<g:VerticalPanel ui:field="classOnSalesPanel">
					<g:Label ui:field="classesOnSalesLabel" styleName="header" />
					<g:VerticalPanel ui:field="onePerRadioPanel" spacing="6">
						<g:RadioButton name="onePerRadioGroup" ui:field="onePerTransactionRadio" />
						<g:RadioButton name="onePerRadioGroup" ui:field="onePerDetailLineRadio" />
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
	
</ui:UiBinder> 