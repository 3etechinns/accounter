<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.address_panel {
			padding-left: 15px;
		}
	</ui:style>
	<g:VerticalPanel styleName="companyInfoPanel">
		<g:VerticalPanel ui:field="mainPanel">
			<g:HorizontalPanel>
				<g:Label ui:field="companyNameLabel" styleName="header" />
				<g:TextBox ui:field="companyNameTextBox" visibleLength="60" />
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:CheckBox ui:field="isShowLegalName" />
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="legalNamePanel">
				<g:Label ui:field="legalNameLabel" styleName="header" />
				<g:TextBox ui:field="legalNameTextBox" />
			</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel>
			<g:VerticalPanel ui:field="tradingAddressPanel"
				styleName="address_panel">
				<g:Label ui:field="tradingAddressTitle" horizontalAlignment="ALIGN_LEFT"
					styleName="header" />
				<g:Label ui:field="tradingAddressDescription" />
				<g:VerticalPanel horizontalAlignment="ALIGN_LEFT"
					ui:field="tradingAddressSubPanel">
					<g:Grid>
						<g:row>
							<g:customCell>
								<g:Label ui:field="tAddress1Label" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="tAddress1TextBox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="tAddress2Label" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="tAddress2TextBox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="tCityLabel" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="tCityTextBox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="tPostalCodeLabel" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="tPostalCodeTextBox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="tCountryLabel" />
							</g:customCell>
							<g:customCell>
								<g:ListBox width="185px" ui:field="tCountryCombo"
									enabled="false" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="tStateLabel" />
							</g:customCell>
							<g:customCell>
								<g:ListBox width="185px" ui:field="tStateCombo" />
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:VerticalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel>
				<g:CheckBox ui:field="isShowRegisteredAddressCheckBox" />
			</g:HorizontalPanel>
			<g:VerticalPanel ui:field="registeredAddressPanel">
				<g:Label ui:field="registeredAddressTitle"
					horizontalAlignment="ALIGN_LEFT" styleName="header" />
				<g:Label ui:field="registeredAddressDescription" />

				<g:VerticalPanel ui:field="registeredAddressSubPanel"
					horizontalAlignment="ALIGN_LEFT">
					<g:Grid>
						<g:row>
							<g:customCell>
								<g:Label ui:field="rAddress1Label" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="rAddress1TextBox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="rAddress2Label" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="rAddress2TextBox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="rCityLabel" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="rCityTextBox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="rPostalCodeLabel" />
							</g:customCell>
							<g:customCell>
								<g:TextBox ui:field="rPostalCodeTextbox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="rCountryComboLabel" />
							</g:customCell>
							<g:customCell>
								<g:ListBox width="185px" ui:field="rCountryCombo"
									enabled="false" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label ui:field="rStateComboLabel" />
							</g:customCell>
							<g:customCell>
								<g:ListBox width="185px" ui:field="rStateCombo" />
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel>
			<g:VerticalPanel horizontalAlignment="ALIGN_LEFT">
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label ui:field="companyEmailHeaderLabel" />
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="companyEmailTextBox" />
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Label ui:field="emailIDDescriptionLabel" />
			</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel>
			<g:VerticalPanel horizontalAlignment="ALIGN_LEFT">
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label ui:field="companyWebsiteHeaderLabel" />
						</g:customCell>
						<g:customCell>
							<g:TextBox visibleLength="35" ui:field="companyWebsiteTextBox" />
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:VerticalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel>
			<g:VerticalPanel horizontalAlignment="ALIGN_LEFT">
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label ui:field="companyPhoneNumberLabel" />
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="companyPhoneNumberTextBox" />
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:Label ui:field="fiscalYearLabel" styleName="header" />
					<g:HorizontalPanel styleName="fiscal-year-width">
						<g:Label ui:field="fiscalStarts" styleName="company-preferences-labels"/>
						<g:ListBox width="185px" ui:field="fiscalStartsList"/>
					</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 