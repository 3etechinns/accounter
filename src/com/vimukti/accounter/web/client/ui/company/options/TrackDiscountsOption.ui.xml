<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel spacing="8" styleName="companyInfoPanel">
		<g:VerticalPanel spacing="5">
			<g:HorizontalPanel>
				<g:CheckBox ui:field="trackDiscountCheckBox" styleName="header" />
			</g:HorizontalPanel>
			<g:FlowPanel ui:field="hidePanel">
				<g:Label ui:field="discountLabel" />
				<g:FlowPanel ui:field="radioButtonPanel">
					<g:RadioButton name="" ui:field="onepeTransactionRadioButton" />
					<g:Label ui:field="oneperTransactionLabel" />
					<g:RadioButton name="" ui:field="oneperdetaillineRadioButton" />
					<g:Label ui:field="oneperdetaillineLabel" />
				</g:FlowPanel>
				<g:Label ui:field="selectDiscountAccount" />
				<g:FlowPanel ui:field="accountPanel">
				<g:Label ui:field="discountAccount" />
				<g:ListBox ui:field="accountsCombo" />
			</g:FlowPanel>
			</g:FlowPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 