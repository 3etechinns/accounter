<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel spacing="8">
		<g:VerticalPanel styleName="companyInfoPanel">
			<g:Label styleName="header" ui:field="ageingLabel" />
			<g:VerticalPanel>
				<g:RadioButton name="ageingGroup" ui:field="ageingforduedateRadioButton" />
				<g:RadioButton name="ageingGroup"
					ui:field="ageingfortransactiondateRadioButton" checked="true" />
			</g:VerticalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel styleName="companyInfoPanel">
			<g:Label ui:field="sellingsLabel" styleName="header" />
			<g:VerticalPanel>
				<g:RadioButton name="sellingsGroup" ui:field="servicesRadioButton" />
				<g:RadioButton name="sellingsGroup" ui:field="productsRadioButton" />
				<g:RadioButton name="sellingsGroup" ui:field="bothRadioButton"
					checked="true" />
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 