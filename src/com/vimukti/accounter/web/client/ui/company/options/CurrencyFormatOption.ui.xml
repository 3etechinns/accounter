<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel spacing="8" styleName="companyInfoPanel">
		<g:VerticalPanel>
			<g:FlowPanel ui:field="flowPanel">
				<g:HorizontalPanel>
					<g:Label  ui:field="positiveLabel"/>
					<g:TextBox ui:field="positiveTextBox"/>
					<g:Label ui:field="negaLabel"/>
					<g:TextBox ui:field="negativeTextBox"/>
				</g:HorizontalPanel>
			</g:FlowPanel>
			<g:HorizontalPanel styleName="currency_format_option">
				<g:VerticalPanel>
					<g:Label ui:field="currencySymbolLabel" />
					<g:Label ui:field="positiveCurrencyFormatLabel" />
					<g:Label ui:field="negativeCurrencyFormatLabel" />
					<g:Label ui:field="decimalSymbolLabel" />
					<g:Label ui:field="noOfDigitsAfterDecimalLabel" />
					<g:Label ui:field="digitGroupingSymbolLabel" />
					<g:Label ui:field="digitGroupingLabel" />
				</g:VerticalPanel>
				<g:VerticalPanel>
					<g:ListBox ui:field="currencySymbolCombo"/>
					<g:ListBox ui:field="positiveCurrencyFormatCombo"/>
					<g:ListBox ui:field="negativeCurrencyFormatCombo"/>
					<g:TextBox ui:field="decimalSymbolTextBox"/>
					<g:TextBox ui:field="noOfDigitsAfterDecimalTextBox"/>
					<g:TextBox ui:field="digitGroupingSymbolTextBox"/>
					<g:ListBox ui:field="digitGroupingCombo"/>
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 