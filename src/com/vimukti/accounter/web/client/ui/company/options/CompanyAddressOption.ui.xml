<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel spacing="8" styleName="companyInfoPanel">
		<g:Label ui:field="registeredAddress" horizontalAlignment="ALIGN_LEFT" styleName="header" />
		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" >
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label ui:field="address1Label" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="address1TextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="address2Label" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="address2TextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="cityLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="cityTextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="postalCodeLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="postalCodeTextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="countryLabel" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="countryCombo" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="stateLabel" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="stateCombo" />
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
		</g:Cell>
		<g:Label ui:field="customerHeaderLabel" horizontalAlignment="ALIGN_LEFT" styleName="header"/>
		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:VerticalPanel spacing="5" ui:field="companyCustomerPanel" horizontalAlignment="ALIGN_CENTER">
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label ui:field="customerAddress1Label"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="customerAddress1TextBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="customerAddress2Label"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="customerAddress2TextBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label  ui:field="customerCityLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="customerCityTextBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="customerPostalCodeLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="customerPostalCodeTextbox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="customerCountryComboLabel"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="custmerComboBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label ui:field="customerStateComboLabel"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="customerStateComboBox"/>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
		</g:Cell>
		</g:VerticalPanel>
</ui:UiBinder> 